    }
    #hero p {
      font-size: 1.3rem;
      margin-bottom: 30px;
      opacity: 0;
      animation: fadeInUp 1.3s ease forwards;
      animation-delay: 0.3s;
      transform: translateY(20px);
    }
    #hero button {
      font-size: 1rem;
      padding: 12px 30px;
      border: none;
      border-radius: 30px;
      cursor: pointer;
      background: #ff6b6b;
